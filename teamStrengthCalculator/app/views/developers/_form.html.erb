<%= form_for(@developer) do |f| %>
  <% if @developer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@developer.errors.count, "error") %> prohibited this developer from being saved:</h2>

      <ul>
      <% @developer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :dev_type %><br>
        <%= f.select :dev_type, [['Full Time','Full Time'], ['Part Time','Part Time'], ['Special Guest', 'Special Guest']], {class: 'form-control'}%>
    </div>
    <div class="actions">
      <%= f.submit :class => 'btn btn-success'%>
    </div>
  </div>
</div>
<% end %>
