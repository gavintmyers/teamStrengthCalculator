<%= form_for(@sprint) do |f| %>
  <% if @sprint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sprint.errors.count, "error") %> prohibited this sprint from being saved:</h2>

      <ul>
      <% @sprint.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-md-6-up col-md-offset-3-up">
      <div class="field">
        <div class="row">
          <%= f.label :start_date %>
         <%= f.date_field :start_date, class: "form-control"%>
        </div>
        <div class="row">
         <%= f.label :end_date %>
         <%= f.date_field :end_date, class: "form-control" %>
        </div>
        <div class="row">
          <%= f.label :iteration_length %>
          <%= f.number_field :iteration_length, class: "form-control" %>
        </div>
        <div class="row">
          <%= f.label :part_time_multiplier %>
          <%= f.number_field :part_time_multiplier, :step=>"0.01", class: "form-control" %>
        </div>

      </div>
      <div class="field">

          <%= f.fields_for :hours do |hour| %>
            <div class="panel panel-default panel-success">
              <div class="panel-heading"></div>
              <div class="panel-body">

                <div class="row">
                  <%= hour.label :client %>
                  <%= hour.number_field :client, class: "form-control" %>
                </div>
                <div class="row">
                  <%= hour.label :developer %>
                  <%= hour.number_field :developer, class: "form-control" %>
                </div>
                <div class="row">
                  <%= hour.label :number_of_hours %>
                  <%= hour.number_field :number_of_hours, class: "form-control" %>
                </div>
              </div>
            </div>
          <% end %>

      </div>
      <div class="actions">
        <%= f.submit :class => 'btn btn-success'%>
      </div>
    </div>
  </div>
</div>



<% end %>
