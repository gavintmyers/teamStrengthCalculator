<%= form_for(@sprint) do |f| %>
  <% if @sprint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sprint.errors.count, "error") %> prohibited this sprint from being saved:</h2>

      <ul>
      <% @sprint.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">

    <div>
      <%= f.label :start_date %><br />
     <%= f.date_field :start_date%>
    </div>

    <div>
     <%= f.label :end_date %><br />
     <%= f.date_field :end_date, class: "form-control" %>
    </div>

    <div>
      <%= f.label :iteration_length %><br />
      <%= f.number_field :iteration_length %>
    </div>

    <div>
      <%= f.label :part_time_multiplier %><br />
      <%= f.number_field :part_time_multiplier, :step=>"0.01" %>
    </div>

  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
