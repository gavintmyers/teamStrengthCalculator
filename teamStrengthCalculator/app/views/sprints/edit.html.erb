<h1>Editing Sprint</h1>

<%= form_for(@sprint) do |f| %>

<div class="field">

  <div>
    <%= f.label :start_date %><br />
   <%= f.date_field :start_date %>
  </div>

  <div>
   <%= f.label :end_date %><br />
   <%= f.date_field :end_date %>
  </div>

  <div>
    <%= f.label :iteration_length %><br />
    <%= f.number_field :iteration_length %>
  </div>

  <div>
    <%= f.label :part_time_multiplier %><br />
    <%= f.number_field :part_time_multiplier, :step=>"0.01" %>
  </div>

</div>

<div class="actions">
  <%= f.submit %>
</div>

<% end %>

<%= link_to 'Show', @sprint %> |
<%= link_to 'Back', sprints_path %>
