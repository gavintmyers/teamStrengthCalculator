<p id="notice"><%= notice %></p>

<h1>Listing Hours</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Developer</th>
      <th>Sprint</th>
      <th>Number of hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hours.each do |hour| %>
      <tr>
        <td><%= hour.client %></td>
        <td><%= hour.developer %></td>
        <td><%= hour.sprint %></td>
        <td><%= hour.number_of_hours %></td>
        <td><%= link_to 'Show', hour %></td>
        <td><%= link_to 'Edit', edit_hour_path(hour) %></td>
        <td><%= link_to 'Destroy', hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

